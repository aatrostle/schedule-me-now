.row
  .span12
    %h2 Add Interview Slot
    = render 'interviews/form'
.row
  .span12
    %h2 Your Interview Slots
    %table.table.table-bordered.table-striped
      %thead
        %tr
          %th Date and Time
          %th Controls
      %tbody
        - @list_interviews.each do |i|
          %tr
            %td
              = i.interview_at.strftime(" %B %d at %I:%M %p")
            %td
              = link_to "Delete Interview Slot", i, :method => :delete, :confirm => "Are you sure you want to delete this interview slot?"
